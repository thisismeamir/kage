{
  "name": "Kage for Kid A",
  "base_path": "",
  "module_paths": [
    {
      "path": "./modules",
      "local": true
    }
  ],
  "atom_paths": [
    {
      "path": "./atoms",
      "local": true
    }
  ],
  "version": "1.0.0",
  "server": {
    "port": 8080,
    "host": "localhost",
    "api": {
      "base_url": "/api",
      "version": "v1"
    },
    "database": [
      {
        "type": "json",
        "name": "node_registry",
        "path": "./data/node.registry.json"
      },
      {
        "type": "json",
        "name": "map_registry",
        "path": "./data/map.registry.json"
      },
      {
        "type": "json",
        "name": "graph_registry",
        "path": "./data/graph.registry.json"
      },
      {
        "type": "folder",
        "name": "source_registry",
        "path": "./data/sources"
      }
    ],
    "logging": {
      "level": "info",
      "file": "./logs/kage.log"
    }
  },
  "client": {
    "Web": {
      "port": 3000,
      "host": "localhost",
      "network_accessible": false,
      "path": "./web",
      "build": "npm build",
      "run": "npm run"
    }
  }
}